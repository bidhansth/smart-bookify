<%= render partial: "shared/notice" %>

<div class="box">
  <div class="container">
    <div class="top-header">
      <header class="header-class">Welcome</header>
    </div>
    <% if flash[:alert] %>
    <div class="login-alert">
        <i class='bx bxs-error-circle' style='color:#fffefe' ></i><p class="alert"><%= alert %></p>
    </div>
    <% end %>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="input-field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input", placeholder: "Enter your Email", required: true %>
      </div>
      <div class="input-field">
        <%= f.password_field :password, autocomplete: "current-password", class: "input", placeholder: "Enter your Password", required: true %>
      </div>
      <div class="bottom">
        <% if devise_mapping.rememberable? %>
          <div class="left">
            <%= f.check_box :remember_me, class:"check"%>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="right">
          <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Forgot your password?", new_password_path(resource_name), class:"link" %><br />
        <% end %>
        </div>
      </div>

      <div class="input-field">
        <%= f.submit "Log in", class: "submit" %>
      </div>

      <div class="register">
        <div class="">
          Not Registered Yet?
          <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Create an Account", new_registration_path(resource_name), class:"link" %><br />
          <% end %>
          
        </div>
      </div>
    <% end %>
  </div>
</div>




