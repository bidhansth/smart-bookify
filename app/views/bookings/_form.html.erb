<%= form_with(model: booking) do |form| %>
  <% if booking.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :user_name, "Name" %>
    <%= form.text_field :user_name, required: true %>
  </div>

  <div>
    <%= form.label :user_email, "Email" %>
    <%= form.email_field :user_email, required: true %>
  </div>

  <div>
    <%= form.label :user_contact, "Contact No." %>
    <%= form.text_field :user_contact, required: true %>
  </div>

  <div>
    <%= form.label :description, "What would you like to discuss?" %>
    <%= form.text_area :description, required: true %>
  </div>

  <div>
    <%= form.hidden_field :timeslot_id, value: @timeslot.id %>
  </div>

  <div style="display:flex;">
    <div class="booking-back">
      <%= link_to "Back", book_client_path(@client.id), data: { turbo_frame: "_top" } %>
    </div>
    <div class="booking-submit">
      <%= form.submit "Book" %>
    </div>
  </div>
<% end %>
